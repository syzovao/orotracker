{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'issues-grid' %}
{% set pageTitle = 'oro.issue.entity_plural_label'|trans %}

{% block navButtons %}
    {% if isDesktopVersion() and resource_granted('oro_issue_create') %}
        {{ UI.addButton({
            'path':          path('oro_issue_create'),
            'entity_label': 'oro.issue.entity_label'|trans
        }) }}

        {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
            entityClass: entity_class,
            importProcessor: 'oro_issue.import_processor',
            exportProcessor: 'oro_issue',
            importTitle: 'oro.importexport.import.entity'|trans({'%entityName%': 'oro.issue.entity_plural_label'|trans}),
            dataGridName: gridName
        } %}

    {% endif %}
{% endblock %}
