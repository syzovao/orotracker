{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

{% oro_title_set({params : {"%entity.code%": entity.code} }) %}
{% block navButtons %}
    {% if isDesktopVersion() and resource_granted('oro_issue_create') and (entity.issueType == 'story') %}
        {{ UI.addButton({
            'path' : path('oro_issue_create', { 'parent': entity.id }),
            'entity_label': 'oro.issue.subtask_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('oro_issue_update', { id: entity.id }),
            'entity_label': 'oro.issue.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_api_delete_issue', {'id': entity.id}),
            'dataRedirect': path('oro_issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-user',
            'dataId': entity.id,
            'entity_label': 'oro.issue.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('oro_issue_index'),
    'indexLabel': 'oro.issue.entity_plural_label'|trans,
    'entityTitle': entity.code
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {%- set issueInformation -%}
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {% if entity.getParent %}
                {%- set urlParent -%}
                <a href="{{ path('oro_issue_view', { 'id': entity.getParent.id }) }}">
                    {{ entity.getParent.code}}
                </a>
                {%- endset -%}
                {{ UI.renderHtmlProperty('oro.issue.parent.label'|trans, urlParent) }}
            {% endif %}
            {{ UI.renderProperty('oro.issue.summary.label'|trans, entity.summary) }}
            {{ UI.renderProperty('oro.issue.code.label'|trans, entity.code) }}
            {{ UI.renderHtmlProperty('oro.issue.description.label'|trans, entity.description|nl2br) }}
        </div>
        {% if entity.hasChildren %}
            <div class="responsive-block">
                <p><strong>{{ 'oro.issue.subtask_plural_label'|trans }}</strong></p>
                {% for subtask in entity.children %}
                    <ul class="list-unstyled">
                        <a href="{{ path('oro_issue_view', { 'id': subtask.id }) }}">{{ subtask.code}}: {{ subtask.summary}}</a>
                    </ul>
                {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
    {%- endset -%}

    {%- set collaboratorsBlock -%}
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {% if entity.collaborators|length > 0 %}
                <ul class="list-unstyled">
                    {% for collaborator in entity.collaborators %}
                        {% if resource_granted('oro_user_user_view') %}
                            <li><a href="{{ path('oro_user_view', {id: collaborator.id}) }}">{{ collaborator|oro_format_name|escape }}</a></li>
                        {% else %}
                            {{ collaborator|oro_format_name|escape }}
                        {% endif %}
                    {% endfor %}
                </ul>
            {% else %}
                {{ "oro.issue.message.no_collaborators"|trans }}
            {% endif %}
        </div>
    </div>
    {%- endset -%}


    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [issueInformation]},
                {'data' : [collaboratorsBlock]},
            ]
        }
    ] %}

    {% set id = 'issueView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}

    {{ parent() }}
{% endblock content_data %}
